
<% if current_user %>
  <%= current_user.email %> <br>
  <%= link_to 'Logout', '/logout' %>
<% else %>
  <%= link_to 'Home', '/' %>
<% end %>

<%= form_for :link do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :url %>
  <%= f.submit 'Submit'%>
<% end %>

<div>
  <h3>Links</h3>
  <% current_user.links.each do |link| %>
    <ul>
      <li>
        <% if link.read %>
          <h4><s><%= link.title %></s></h4>
          <h5><s><%= link.url %></s></h5>
          <%= button_to 'Mark as Unread', change_status_link_path(link), method: :patch %>
        <% else %>
          <h4><%= link.title %></h4>
          <h5><%= link.url %></h5>
          <%= button_to 'Mark as Read', change_status_link_path(link), method: :patch %>
        <% end %>
        <%= link_to 'Edit', edit_link_path(link) %>
      </li>
    </ul>
  <% end %>
</div>