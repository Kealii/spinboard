
<% if current_user %>
  <%= current_user.email %> <br>
  <%= link_to 'Logout', '/logout' %>
<% else %>
  <%= link_to 'Home', '/' %>
<% end %>

<%= form_for :link do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :url %>
  <%= f.submit 'Submit'%>
<% end %>

<div>
  <h3>Links</h3>
  <% current_user.links.each do |link| %>
    <ul>
      <li><%= link.title %></li>
      <li><%= link.url %></li>
    </ul>
  <% end %>
</div>